<?xml version="1.0" encoding="utf-8"?>
<!-- A template to add a ripple effect when a button is clicked
     Provided by Pei on the following stackOverflow thread:
     https://stackoverflow.com/questions/40008609/add-ripple-effect-to-my-button-with-button-background-color
 -->
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#FF0000">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="#DCDCDC" />
            <corners android:radius="5dp" />
        </shape>
    </item>

    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:endColor="#008000"
                android:startColor="#008080"
                android:type="linear" />
            <corners android:radius="15dp" />
        </shape>
    </item>
</ripple>
